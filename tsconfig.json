{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ESNext",
      "sourceMap": false,
      "rootDir": "./src/",
      "outDir": "./dist/",
      "strict": true,
      "moduleResolution": "Node",
      "importHelpers": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "removeComments": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "baseUrl": "./"
    },
    "files": [
      "src/App.ts"
    ],
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }